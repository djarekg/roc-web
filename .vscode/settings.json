{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "cSpell.allowCompoundWords": true,
  "cSpell.ignorePaths": [
    ".git",
    ".git/objects",
    ".vscode-insiders",
    ".vscode",
    "angular.json",
    "appsettings.*",
    "node_modules",
    "package-lock.json",
    "package.json",
    "settings.json",
    "vscode-extension"
  ],
  "cSpell.ignoreWords": ["esbenp", "docthis"],
  "cSpell.words": ["ngrx", "ɵkind", "ɵproviders", "Serializability", "signin"],
  "editor.codeActionsOnSave": {
    // "source.organizeImports": true,
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.format.enable": false,
  "eslint.codeAction.disableRuleComment": {
    "enable": true,
    "location": "separateLine"
  },
  "eslint.packageManager": "pnpm",
  "eslint.onIgnoredFiles": "off",
  "files.watcherExclude": {
    ".git/**": true,
    ".out/**": true,
    ".vscode/**": true,
    "dist/**": true,
    "node_modules/**": true
  },
  "typescript.tsdk": "node_modules/typescript/lib"
}
